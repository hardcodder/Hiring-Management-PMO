<%- include('./includes/head.ejs') %>
<link rel="stylesheet" type="text/css" href="css/register.css">
<link rel="stylesheet" type="text/css" href="css/table.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://kit.fontawesome.com/0cfa224e02.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

<body style="background-color: rgba(255,164,0, 0.04999999701976776);">
  
  <%- include('./includes/nav.ejs') %>
  
  <div style="text-align: center;">
        <h1>Requests</h1>
    </div>
    <form style="margin-left: 10px;" method="post">
      <label for="filters"><h3>Filters</h3></label>
      <div class="form-row">
        <div class="form-group col-md-2">
              <select class="form-control type" id="depart" name="depart">
                  <option selected>Team Manager</option>
                  <option>Finance</option>
              </select>
          </div>

          <div class="form-group col-md-2">
              
            <select class="form-control type" id="position" name="position">
                <option selected>All Positions</option>
                <option>SDE 1 BE</option>
                <option>SDE 1 FE</option>
                <option>SDE 2 BE</option>
                <option>SDE 2 FE</option>
                <option>SDE 3</option>
                <option>EM</option>
                <option>Director</option>
                <option>Sr. Director</option>
                <option>QA 1</option>
                <option>QA 2</option>
                <option>QA 3</option>
                <option>Data Analyst 1</option>
                <option>Data Analyst 2</option>
                <option>Data Scientist 1</option>
                <option>Data Scientist 2</option>
            </select>
        </div>

          <div class="col-auto my-1 sel-btn">
            <button type="submit" class="btn">Filter</button>
          </div>
      </div>
    </form>

    <table class="table table-hover table-dark">
        <thead>
          <tr>
            <!-- <th scope="col">Request Id</th> -->
            <th scope="col">Date</th>
            <th scope="col">Generated By</th>
            <th scope="col">To Be Approved By</th>
            <th scope="col">Team</th>
            <th scope="col">Position</th>
            <th scope="col">State</th>
            <!-- <th scope="col">Date</th> -->
          </tr>
        </thead>
        <tbody>
        <% request.forEach(function callback(value, index) {%>
          <tr>
            <!-- <td><%= value._id %></td> -->
            <td><%= %></td>
            <td><%= value.generatedBy %></td>
            <td><%= value.toBeApprovedBy %></td>
            <td><%= value.requestBody.team %></td>
            <td><%= value.requestBody.position %></td>
            <td><%= value.state %></td>
          </tr>
         <% }) %>
        </tbody>
      </table>
    
<%- include('./includes/end.ejs') %>