
<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" type="text/css" href="css/register.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/0cfa224e02.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="css/single_request.css">

    <body style="background-color: rgba(255,164,0, 0.04999999701976776);">
        <%- include('./includes/nav.ejs') %>

        <div class="d-flex justify-content-center m-3">
    
        <li style="list-style-type: none;color:black ;" class = "alert alert-success shadow p-3 mb-5 bg-white col col-xl-8 col-lg-10 col-md-10 col-sm-10 col-10 mx-3 single_req">
            <h5 style="text-align: center; ">Request</h5>
            <hr>
            <div class="d-flex justify-content-between">
                <h5>Generated By</h5>
                <h5><%=request.generatedBy%></h5>
            </div>
            <hr>
            <hr>

            <div class="d-flex justify-content-between">
                <h5>Status</h5>
                <h5><%=request.state%></h5>
            </div>
            <hr>
            <hr>

            <div class="d-flex justify-content-between">
                <h5>To Be Approved By</h5>
                <h5><%=request.toBeApprovedBy%></h5>
            </div>
            <hr>
            <hr>

            <div class="d-flex justify-content-between">
                <h5>Type</h5>
                <h5><%=request.requestBody.type%></h5>
            </div>
            <hr>
            <hr>

            <div class="d-flex justify-content-between">
                <h5>Reporting Manager</h5>
                <h5><%=request.requestBody.reportingManager%></h5>
            </div>
            <hr>
            <hr>
            <div class="d-flex justify-content-between">
                <h5>Team</h5>
                <h5><%=request.requestBody.team%></h5>
            </div>
            <hr>
            <hr>
            <div class="d-flex justify-content-between">
                <h5>Position</h5>
                <h5><%=request.requestBody.position%></h5>
            </div>
            <hr>
            <hr>
            <div class="d-flex justify-content-between">
                <h5>Business Case</h5>
                <h5><%=request.requestBody.businessCase%></h5>
            </div>
            <hr>
            <hr>
            <%if(request.requestBody.type == 'New'){%>
                <div class="d-flex justify-content-between">
                    <h5>Priority</h5>
                    <h5><%=request.requestBody.priority%></h5>
                </div>
                <hr>
                <hr>
                <div class="d-flex justify-content-between">
                    <h5>Number of Persons</h5>
                    <h5><%=request.requestBody.numPersons%></h5>
                </div>

            <%}else{%>
                <div class="d-flex justify-content-between">
                    <h5>Person Replacing</h5>
                    <h5><%=request.requestBody.personReplacing%></h5>
                </div>
                <hr>
                <hr>
                <div class="d-flex justify-content-between">
                    <h5>Budget Code</h5>
                    <h5><%=request.requestBody.budgetCode%></h5>
                </div>

            <%}%>
            <br>

            <!-- <%if(ta){%>
                <a href="http://localhost:5000/getFinanceRequestForm?requestId=<%=request._id%>" type="button" class="btn btn-info" style="float: right;">
                    Acknowledge
                </a>
            <%}%> -->

            <%if(ta && !acknowledged){%>
                <a href="http://localhost:5000/createOpening?requestId=<%=request._id%>&budgetCode=<%=request.requestBody.budgetCode%>" type="button" class="btn btn-info" style="float: right;">
                    Acknowledge
                </a>
            <%}%>



            <%if(generator){%>
            <%if(request.state == "OPEN"){%>
            <a type="button" href="http://localhost:5000/getModifyForm?requestId=<%=request._id%>" class="btn btn-info ">
                Modify
            </a>
            <form action="/cancelRequest" method="POST" style="display: inline;">
                <input type="hidden" name="requestId" value="<%=request._id%>">
                <button type="submit" class="btn btn-danger ">
                    Cancel
                </button>
            </form>
            <%}%>
            <a href="http://localhost:5000/getComments?requestId=<%=request._id%>" type="button" class="btn btn-info" style="float: right;">
                Comments
            </a>
            
            <%}%>
            
            

            <%if(approver){%>
                <a href="http://localhost:5000/getComments?requestId=<%=request._id%>" type="button" class="btn btn-info" style="float: right;">
                    Comments
                </a>
                <form action="/cancelRequest" method="POST" style="display: inline;">
                    <input type="hidden" name="requestId" value="<%=request._id%>">
                    <button type="submit" class="btn btn-danger ">
                        Cancel
                    </button>
                </form>
                <form action="/approveRequest" method="POST" style="display: inline;">
                    <input type="hidden" name="requestId" value="<%=request._id%>">
                    <button type="submit" class="btn btn-success ">
                        Approve
                    </button>
                </form>
            <%}%>
            
        </li>
        <br>
        <br>
    </div>
    <%- include('./includes/end.ejs') %>